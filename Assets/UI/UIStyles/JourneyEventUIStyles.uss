.optionButton {
    margin-bottom: 10px;
    margin-top: 10px;
    font-size: 36px;
    padding-top: 10px;
    padding-bottom: 10px;
    background-color: rgba(0, 0, 0, 0.24);
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    color: rgb(255, 255, 255);
}

.description {
    margin-left: 20%;
    margin-right: 20%;
    margin-top: 20px;
    margin-bottom: 20px;
    font-size: 44px;
    -unity-text-align: middle-center;
    color: rgb(255, 255, 255);
    white-space: normal;
}

.optionButton:hover {
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
    border-left-color: rgba(47, 108, 159, 255);
    border-right-color: rgba(47, 108, 159, 255);
    border-top-color: rgba(47, 108, 159, 255);
    border-bottom-color: rgba(47, 108, 159, 255);
}
